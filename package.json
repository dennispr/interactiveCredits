{
  "name": "interactive-credits",
  "version": "1.0.0",
  "description": "Interactive credits system inspired by Whittier, Alaska - patrons as NPCs in a building",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint && npm run type-check",
    "build:dev": "tsc && vite build --mode development",
    "build:prod": "npm run prebuild && tsc && vite build --mode production",
    "serve": "npm run build && npm run preview",
    "deploy:prepare": "npm run build:prod",
    "start": "npm run dev"
  },
  "dependencies": {
    "pixi.js": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": ["pixi.js", "interactive", "credits", "game", "typescript"],
  "author": "",
  "license": "MIT"
}